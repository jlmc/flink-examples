<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="ConsoleText" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>
                    %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %highlight{%-5level} %cyan{%logger{36}} - %msg%n%throwable
                </Pattern>
            </PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="ConsoleText"/>
        </Root>

        <!-- Example of package-specific logging levels -->
        <Logger name="io.github.jlmc" level="debug" additivity="false">
            <AppenderRef ref="ConsoleText"/>
        </Logger>
        <Logger name="org.apache.flink" level="info"/>
        <Logger name="org.apache.kafka" level="info"/>
        <Logger name="org.apache.http" level="warn"/>
    </Loggers>

</Configuration>
