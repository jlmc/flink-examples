<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="60">

    <Appenders>

        <!-- Console Appender com JSON layout -->
        <Console name="Console" target="SYSTEM_OUT">
            <JsonLayout
                    compact="true"
                    eventEol="true"
                    timestampFormat="ISO8601"
                    includeStacktrace="true"
                    includeThreadContext="true"
            />
        </Console>

        <!-- (Opcional) Rolling File Appender em JSON -->
        <!--
        <RollingFile name="File"
                     fileName="logs/patient-adt-processing-job.json"
                     filePattern="logs/patient-adt-processing-job-%d{yyyy-MM-dd}.json.gz">
            <JsonLayout
                compact="true"
                eventEol="true"
                timestampFormat="ISO8601"
                includeStacktrace="true"
                includeThreadContext="true"
            />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>
        -->

    </Appenders>

    <Loggers>

        <!-- Root logger -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <!-- <AppenderRef ref="File"/> -->
        </Root>

        <!-- Application-specific logs -->
        <Logger name="io.github.jlmc" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Framework/library logs -->
        <Logger name="org.apache.flink" level="info"/>
        <Logger name="org.apache.kafka" level="info"/>
        <Logger name="org.apache.http" level="warn"/>

        <!-- Suppress noisy logs -->
        <Logger name="org.apache.zookeeper" level="error"/>
        <Logger name="org.apache.curator" level="error"/>
        <Logger name="org.apache.flink.runtime.taskmanager.Task" level="info"/>
    </Loggers>

</Configuration>
